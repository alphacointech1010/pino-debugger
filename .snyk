# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Ignore specific vulnerabilities (use with caution)
ignore:
  # Example: Ignore a specific vulnerability in a dev dependency
  # 'SNYK-JS-EXAMPLE-123456':
  #   - '*':
  #       reason: This is a dev dependency and doesn't affect production
  #       expires: '2024-12-31T23:59:59.999Z'

# Language settings
language-settings:
  javascript:
    # Ignore dev dependencies for production vulnerability scanning
    ignore-dev-deps: true

# Patch settings
patch: {}

# Exclude paths from scanning
exclude:
  # Exclude test files and benchmarks from security scanning
  global:
    - test/**
    - benchmarks/**
    - '*.test.js'
    - '*.spec.js'
    - coverage/**
    - docs/**
    - examples/**